<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Posttext</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.posttext.body if comment.posttext %></td>
        <td><%= link_to 'Show', console_comment_path(comment) %></td>
        <td><%= link_to 'Edit', edit_console_comment_path(comment) %></td>
        <td><%= link_to 'Destroy', console_comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
