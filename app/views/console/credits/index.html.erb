<p id="notice"><%= notice %></p>

<h1>Credits</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Currency</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @credits.each do |credit| %>
      <tr>
        <td><%= credit.user.email %></td>
        <td><%= money_name(credit.currency) %></td>
        <td><%= money(credit.balance, credit.currency) %></td>
        <td><%= link_to 'Show', console_credit_path(credit) %></td>
        <td><%= link_to 'Edit', edit_console_credit_path(credit) %></td>
        <td><%= link_to 'Destroy', console_credit_path(credit), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Credit', new_console_credit_path %>
