%table.table
  %thead
    %tr
      %th Role
      %th Name
      %th Description
      %th User
      %th
  %tbody
    - @roles.each do |role|
      %tr
        %td= role.role.name if role.role_id
        %td= role.name
        %td= role.description
        %td= role.user.email
        %td
          = link_to 'Show', console_role_path(role)
          = link_to 'Edit', edit_console_role_path(role)
          = link_to 'Destroy', console_role_path(role), method: :delete, data: { confirm: 'Are you sure?' }
