<p id="notice"><%= notice %></p>

<h1>Roles</h1>

<table>
  <thead>
    <tr>
      <th>Role</th>
      <th>Name</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.role.name if role.role_id %></td>
        <td><%= role.name %></td>
        <td><%= role.description %></td>
        <td><%= role.user %></td>
        <td><%= link_to 'Show', console_role_path(role) %></td>
        <td><%= link_to 'Edit', edit_console_role_path(role) %></td>
        <td><%= link_to 'Destroy', console_role_path(role), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Role', new_console_role_path %>
