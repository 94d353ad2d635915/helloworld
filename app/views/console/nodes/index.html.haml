%table.table
  %thead
    %tr
      %th id
      %th Node
      %th Name
      %th Slug
      %th Avatar
      %th Tagline
      %th User
      / %th Posttext
      %th
  %tbody
    - @nodes.each do |node|
      %tr
        %td= node.id
        %td= node.node_id
        %td= node.name
        %td= node.slug
        %td= image_tag(node.avatar.url, size: 48) if node.avatar
        %td= node.tagline
        %td= node.user.email
        / %td= node.posttext.body if node.posttext
        %td
          = link_to 'Show', console_node_path(node)
          = link_to 'Edit', edit_console_node_path(node)
          = link_to 'Destroy', console_node_path(node), method: :delete, data: { confirm: 'Are you sure?' }
