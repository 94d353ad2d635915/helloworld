<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>avatar</th>
      <th>Location</th>
      <th>Company</th>
      <th>Tagline</th>
      <th>bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.user.email %></td>
        <td><%= image_tag profile.avatar.url if profile.avatar %></td>
        <td><%= profile.location %></td>
        <td><%= profile.company %></td>
        <td><%= profile.tagline %></td>
        <td><%= profile.posttext.body %></td>
        <td><%= link_to 'Show', console_profile_path(profile) %></td>
        <td><%= link_to 'Edit', edit_console_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', console_profile_path(profile), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_console_profile_path %>
