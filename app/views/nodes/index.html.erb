<p id="notice"><%= notice %></p>

<h1>Nodes</h1>

<table>
  <thead>
    <tr>
      <th>Node</th>
      <th>Name</th>
      <th>Slug</th>
      <th>Tagline</th>
      <th>Avatar</th>
      <th>User</th>
      <th>Posttext</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nodes.each do |node| %>
      <tr>
        <td><%= node.node_id %></td>
        <td><%= node.name %></td>
        <td><%= node.slug %></td>
        <td><%= node.tagline %></td>
        <td><%= image_tag(node.avatar.url, size: 48) if node.avatar %></td>
        <td><%= node.user %></td>
        <td><%= node.posttext.body if node.posttext %></td>
        <td><%= link_to 'Show', node %></td>
        <td><%= link_to 'Edit', edit_node_path(node) %></td>
        <td><%= link_to 'Destroy', node, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

